<odoo>
<!-- account.invoice inherit form view -->
<record id="invoice_form_inherit" model="ir.ui.view">
    <field name="name">account.invoice.inherit.view.form</field>
    <field name="model">account.invoice</field>
    <field name="inherit_id" ref="account.invoice_form"/>
    <field name="arch" type="xml">
             <xpath expr="//field[@name='user_id']" position="after">
                <field name="s_sale_channel"/>
             </xpath>
             <xpath expr="//field[@name='date_invoice']" position="replace">
                <field name="date_and_hour"/>
                <field name="serie" invisible="1"/>
                <field name="correlative" invisible="1"/>
             </xpath>
    </field>
</record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_test" model="ir.ui.view">
        <field name="name">account.move.form.test</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_info_group']/field[@name='invoice_user_id']" position="after">
                <field name="canal_ventas" />
                <field name="mov_inventario" domain="[('picking_id.origin','=',invoice_origin)]"/>
            </xpath>

            <xpath expr="//group[@id='header_right_group']/div[@class='o_td_label']" position="replace">
                <div class="o_td_label">
                    <label for="fecha_emision" string="Fecha de emisiÃ³n" style="font-weight:bold;"
                        attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                    <label for="fecha_emision" string="Bill Date" style="font-weight:bold;"
                        attrs="{'invisible': [('type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))]}"/>
                </div>
            </xpath>
            <xpath expr="//group[@id='header_right_group']/field[@name='invoice_date']" position="replace">
                <field name="fecha_emision" nolabel="1" options="{'datepicker': {'warn_future': true}}"
                    attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
            </xpath>
        </field>
    </record>
</odoo>